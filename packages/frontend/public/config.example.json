{
  "global": {
    "title": "Dashborion Operations",
    "logo": "/logo.png",
    "logoAlt": "My Company",
    "ssoPortalUrl": "https://your-sso-portal.awsapps.com/start",
    "defaultRegion": "eu-west-1"
  },
  "api": {
    "baseUrl": "/api",
    "refreshIntervals": {
      "dashboard": 30000,
      "logs": 3000
    }
  },
  "auth": {
    "logoutUrl": "/saml/logout"
  },
  "projects": {
    "myapp": {
      "name": "My Application",
      "shortName": "APP",
      "color": "#0ea5e9",
      "client": "My Client",
      "description": "Main application",
      "aws": {
        "accounts": {
          "shared-services": {
            "id": "111111111111",
            "alias": "myapp-shared",
            "region": "eu-west-1"
          },
          "staging": {
            "id": "222222222222",
            "alias": "myapp-staging",
            "region": "eu-west-1"
          },
          "production": {
            "id": "333333333333",
            "alias": "myapp-production",
            "region": "eu-west-1"
          }
        }
      },
      "services": ["backend", "frontend", "api"],
      "environments": ["staging", "production"],
      "serviceNaming": {
        "prefix": "myapp"
      },
      "infrastructure": {
        "discoveryTags": {
          "Project": "myapp"
        },
        "serviceColors": {
          "backend": "#3b82f6",
          "frontend": "#8b5cf6",
          "api": "#06b6d4"
        },
        "domainPattern": "{service}.{env}.example.com",
        "domains": {
          "frontend": "app",
          "backend": "api",
          "api": "gateway"
        },
        "databases": ["postgres"],
        "caches": ["redis"]
      },
      "envColors": {
        "staging": { "bg": "bg-yellow-500", "text": "text-yellow-400", "border": "border-yellow-500" },
        "production": { "bg": "bg-green-500", "text": "text-green-400", "border": "border-green-500" },
        "shared": { "bg": "bg-purple-500", "text": "text-purple-400", "border": "border-purple-500" }
      }
    }
  },
  "defaultProject": "myapp"
}
